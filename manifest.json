{
  "name": "BugHerd Extension",
	"browser_action": {
    "default_icon": "bugherd_16.png",
	    "popup": "popup.html"
  },
   "background_page": "background.html",
	"icons": {"16": "bugherd_16.png", "48": "bugherd_48.png", "128": "bugherd_128.png" },
   "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bugherd.js"]
    }
  ],
  "version": "0.2.2",
  "description": "Pre-release chrome extension for BugHerd.",
  "permissions": [
     "<all_urls>"
  ]
}